<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jespiritu.project_elewa_espiritu.MainActivity">

    <Button
        android:id="@+id/btn_arrival"
        android:layout_width="377dp"
        android:layout_height="156dp"
        android:text="Station of Arrival"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_departure"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txt_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Route:"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.036" />

    <Spinner
        android:id="@+id/spn_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_route"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.028" />

    <Button
        android:id="@+id/btn_departure"
        android:layout_width="377dp"
        android:layout_height="156dp"
        android:text="Station of Departure"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/spn_route"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_seeSchedue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Schedule"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_arrival"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="16dp" />

</android.support.constraint.ConstraintLayout>
