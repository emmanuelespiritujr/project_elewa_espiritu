<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundtrees"
    tools:context="com.example.jespiritu.project_elewa_espiritu.MainActivity"
    tools:layout_editor_absoluteY="65dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btn_arrival"
        android:layout_width="295dp"
        android:layout_height="177dp"
        android:layout_marginRight="33dp"
        android:background="@drawable/arrival"
        android:text="Station of Arrival"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/spn_route" />

    <TextView
        android:id="@+id/txt_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Route:"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.038" />

    <Spinner
        android:id="@+id/spn_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="28dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_route"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btn_departure"
        android:layout_width="295dp"
        android:layout_height="177dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/departure"
        android:text="Station of Departure"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/spn_route" />

    <Button
        android:id="@+id/btn_seeSchedue"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:text="See Schedule"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_departure"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintVertical_bias="0.619" />

</android.support.constraint.ConstraintLayout>
